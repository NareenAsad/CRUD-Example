{
  "info": {
    "name": "NestJS CRUD Mock API",
    "description": "A complete Postman collection for testing the NestJS CRUD Mock API endpoints. This collection includes all CRUD operations for items with proper request bodies and examples.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Items API",
      "description": "All CRUD operations for items",
      "item": [
        {
          "name": "Get All Items",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            },
            "description": "Retrieve all items from the mock database"
          },
          "response": []
        },
        {
          "name": "Get Item by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items/1",
              "host": ["{{baseUrl}}"],
              "path": ["items", "1"]
            },
            "description": "Retrieve a specific item by its ID"
          },
          "response": []
        },
        {
          "name": "Create New Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Item\",\n  \"description\": \"This is a sample item description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            },
            "description": "Create a new item in the mock database"
          },
          "response": []
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Item\",\n  \"description\": \"This item has been updated\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/1",
              "host": ["{{baseUrl}}"],
              "path": ["items", "1"]
            },
            "description": "Update an existing item by its ID"
          },
          "response": []
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items/1",
              "host": ["{{baseUrl}}"],
              "path": ["items", "1"]
            },
            "description": "Delete an item by its ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Examples",
      "description": "Example requests with different data",
      "item": [
        {
          "name": "Create Multiple Items",
          "item": [
            {
              "name": "Create Item 1",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"High-performance laptop for development\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/items",
                  "host": ["{{baseUrl}}"],
                  "path": ["items"]
                }
              }
            },
            {
              "name": "Create Item 2",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Mouse\",\n  \"description\": \"Wireless gaming mouse\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/items",
                  "host": ["{{baseUrl}}"],
                  "path": ["items"]
                }
              }
            },
            {
              "name": "Create Item 3",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Keyboard\",\n  \"description\": \"Mechanical keyboard with RGB lighting\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/items",
                  "host": ["{{baseUrl}}"],
                  "path": ["items"]
                }
              }
            }
          ]
        },
        {
          "name": "Error Examples",
          "item": [
            {
              "name": "Get Non-existent Item",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/items/999",
                  "host": ["{{baseUrl}}"],
                  "path": ["items", "999"]
                },
                "description": "This should return a 404 error"
              }
            },
            {
              "name": "Update Non-existent Item",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Updated Item\",\n  \"description\": \"This item doesn't exist\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/items/999",
                  "host": ["{{baseUrl}}"],
                  "path": ["items", "999"]
                },
                "description": "This should return a 404 error"
              }
            },
            {
              "name": "Delete Non-existent Item",
              "request": {
                "method": "DELETE",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/items/999",
                  "host": ["{{baseUrl}}"],
                  "path": ["items", "999"]
                },
                "description": "This should return a 404 error"
              }
            }
          ]
        }
      ]
    }
  ]
}
